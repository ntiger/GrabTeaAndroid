<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:orientation="horizontal"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<ImageButton android:layout_height="50dip" android:src="@drawable/icon"
		android:layout_width="50dip" android:id="@+id/ibPortrait">
	</ImageButton>
	<TextView android:layout_height="wrap_content"
		android:layout_weight="1" android:textSize="20sp"
		android:layout_width="0dip" android:id="@+id/tvName"
		android:textColor="@color/White" android:layout_marginLeft="5dp" />
	<CheckBox android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:id="@+id/cbParticipate"></CheckBox>
</LinearLayout>